<Window x:Class="Salimgareevalanguage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Salimgareevalanguage"
        mc:Ignorable="d"
        Title="SalimgareevaLanguage" ContentRendered="Window_ContentRendered" Height="450" Width="800" Icon="img/school_logo.ico" FontFamily="Comic Sans MS" MinHeight="400" MinWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Языковая школа" FontSize="42" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <Image Source="img/school_logo.png" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Center"></Image>

        <Button Name="BackBtn" Content="Назад" HorizontalAlignment="Right" Click="BackBtn_Click"></Button>

        <Frame Grid.Row="1" Name="MainFrame"  NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered"></Frame>

    </Grid>
</Window>
